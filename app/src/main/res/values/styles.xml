<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="fontCarview">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_sixe</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="styleCardview">
        <item name="android:layout_width">@dimen/width_cardview</item>
        <item name="android:layout_height">@dimen/height_cardview</item>
        <item name="android:clickable">true</item>

    </style>

</resources>
